<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Toolbar
        android:layout_width="411dp"
        android:layout_height="54dp"
        android:background="#03F5F5"
        android:id="@+id/btn"
        android:drawableLeft="@drawable/ic_arro_back_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/textaj"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:targetApi="lollipop" />

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="@+id/btn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/back"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_arro_back_black_24dp"
        />

    <TextView
        android:layout_width="324dp"
        android:layout_height="16dp"
        android:text="Jakarta - Bali"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintTop_toTopOf="@+id/btn"
        android:id="@+id/jkt"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:layout_width="324dp"
        android:layout_height="16dp"
        android:text="20 Feb 2019 - 25 Feb 2019"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintTop_toBottomOf="@+id/jkt"

        />

    <ImageView
        android:id="@+id/img"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:background="@drawable/idn2"
        app:layout_constraintTop_toBottomOf="@+id/btn"
        app:layout_constraintRight_toLeftOf="@id/btnbt"
        />

    <TextView
        android:id="@+id/textaj"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="IDN TRAVEL"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintTop_toBottomOf="@id/btn" />

    <TextView
        android:id="@+id/btnbt"
        android:layout_width="284dp"
        android:layout_height="49dp"
        android:text="5.0 ✭✭✭✭✭"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textaj"
        app:layout_constraintLeft_toRightOf="@id/img"
        app:layout_constraintBottom_toTopOf="@+id/villa"
        />

    <ImageView
        android:id="@+id/villa"
        android:layout_width="423dp"
        android:layout_height="252dp"
        android:background="@drawable/villa"
        app:layout_constraintTop_toBottomOf="@id/btnbt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/khayangan"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Villa Khayangan Puncak"
        android:textColor="#FFF"
        android:id="@+id/khayangan"
        app:layout_constraintTop_toTopOf="@+id/villa"
        android:gravity="center"
        android:textSize="30dp"
        android:background="#41FFFFFF"/>

    <TextView
        android:id="@+id/ulasan"
        android:layout_width="191dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:text="Ulasan"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/villa"
        app:layout_constraintRight_toLeftOf="@+id/love"/>

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/love"
        android:id="@+id/love"
        app:layout_constraintLeft_toRightOf="@id/ulasan"
        app:layout_constraintTop_toBottomOf="@id/villa" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/chat"
        android:layout_marginTop="20dp"
        android:background="@drawable/chat"
        app:layout_constraintLeft_toRightOf="@id/love"
        app:layout_constraintTop_toBottomOf="@id/villa" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/share"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/share"
        app:layout_constraintLeft_toRightOf="@id/chat"
        app:layout_constraintTop_toBottomOf="@id/villa" />

    <TextView
        android:layout_width="193dp"
        android:layout_height="34dp"
        android:text="5.0 ✭✭✭✭✭"
        android:id="@+id/ratng"
        app:layout_constraintTop_toBottomOf="@id/ulasan"
        app:layout_constraintRight_toLeftOf="@+id/love"
        android:gravity="center"/>




</android.support.constraint.ConstraintLayout>